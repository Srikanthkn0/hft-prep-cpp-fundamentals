{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build parity_check",
            "type": "shell",
            "command": "/opt/homebrew/Cellar/gcc/15.2.0/bin/g++-15",
            "args": [
                "-std=c++17",
                "-O2",
                "parity_check.cpp",
                "-o",
                "parity_check"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "/opt/homebrew/Cellar/gcc/15.2.0/bin/g++-15 -std=c++17 -O2 parity_check.cpp -o parity_check && ./parity_check",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-15 build active file",
            "command": "/opt/homebrew/Cellar/gcc/15.2.0/bin/g++-15",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                ""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
